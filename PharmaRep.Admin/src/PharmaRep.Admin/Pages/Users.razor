@page "/users"
@inject UserService userService

<PageTitle>Users</PageTitle>
<div class="w-100 h-100 d-flex justify-content-center">
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <table class="table table-borderless table-hover text-start">
                    <thead>
                        <tr>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in _paginatedResponse?.Items ?? [])
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>
                                    <button class="btn btn-primary me-1" type="button">
                                        <img src="svg/pencil-fill.svg" alt="Edit" />
                                    </button>
                                    <button class="btn btn-danger" type="button">
                                        <img src="svg/trash-fill.svg" alt="Delete" />
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private PaginatedResponse<User> _paginatedResponse = null!;

    protected override async Task OnInitializedAsync()
    {
        _paginatedResponse = await userService.GetUsersAsync();
    }
}