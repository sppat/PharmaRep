@page "/users"
@inject AuthenticationStateProvider authenticationStateProvider

<PageTitle>Users</PageTitle>
<div class="w-100 h-100 d-flex align-items-center justify-content-center">
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <h3>Hello @FirstName @LastName</h3>
            </div>
        </div>
    </div>
</div>

@code {
    private string FirstName { get; set; } = string.Empty;
    private string LastName { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await authenticationStateProvider.GetAuthenticationStateAsync();

        var firstNameClaim = authState.User.Claims.FirstOrDefault(claim => string.Equals(claim.Type,
        Constants.ClaimTypes.FirstName));
        var lastNameClaim = authState.User.Claims.FirstOrDefault(claim => string.Equals(claim.Type,
        Constants.ClaimTypes.LastName));

        FirstName = firstNameClaim?.Value ?? string.Empty;
        LastName = lastNameClaim?.Value ?? string.Empty;
    }
}